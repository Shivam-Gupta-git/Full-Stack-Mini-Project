<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>E-commerce Navbar</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

<!-- Navbar -->
<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      
      <!-- Logo -->
      <div class="flex-shrink-0 text-2xl font-bold text-blue-600">
        <a href="#">ShopEase</a>
      </div>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8">
        <a href="/user/home" class="<%= currentPage === 'Home Page' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %> px-3 py-1 rounded">Home</a>

        <% if(isLoggedIn){ %>
          <% if(user && user.userType === 'guest'){ %>

            <a href="/user/book-list" class="<%= currentPage === 'Book List' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %> px-3 py-1 rounded">Book List</a>
    
              <a href="/user/add-to-cart" class="<%= currentPage === 'Cart' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %> px-3 py-1 rounded"> Add to Cart</a>
            
            <a href="/user/add-to-wishlist" class="<%= currentPage === 'Wishlist' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %> px-3 py-1 rounded"> Add to Wishlist</a>
        
        <%  }else{ %>
          <a href="/host/host-book-list" class="<%= currentPage === 'Host Book List' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %>  px-3 py-1 rounded">Host Book List</a>
  
          <a href="/host/add-books" class="<%= currentPage === 'Add Books' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %>  px-3 py-1 rounded">Add Books</a>

       <% } %>
       <% } %>

       <% if(! isLoggedIn){ %>
         <a href="/login" class="<%= currentPage === 'Login' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %>  px-3 py-1 rounded">Login</a>

         <a href="/signup" class="<%= currentPage === 'Signup' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %>  px-3 py-1 rounded">Signup</a>
      <% }else { %>
        <form action="/logout" method="POST">
          <button type="submit" class="<%= currentPage === 'Login' ? 'bg-blue-500 text-white' : 'transparent text-black hover:bg-blue-500 hover:text-white transition duration-75' %>  px-3 py-1 rounded">Logout</button>
        </form>
     <% } %>
      </nav>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="menu-btn" class="text-gray-700 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
               viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="menu" class="md:hidden hidden bg-white shadow-md">
    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Home</a>
    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Products</a>
    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Wishlist</a>
    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Cart</a>
    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Login</a>
  </div>
</header>



<script>
  const menuBtn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');

  menuBtn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>

</body>
</html>